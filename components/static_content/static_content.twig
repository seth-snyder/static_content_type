{#
/**
 * @file
 * Template for the Static Content SDC component.
 *
 * Available variables:
 * - id: The content ID.
 * - option: The rendering option (proxied, raw, hardened, iframe).
 * - location: The directory location.
 */
#}
{% if id %}
  <div class="static-content-sdc" data-id="{{ id }}" data-location="{{ location }}">
    {{ static_content_type_loader_with_precedence(id, location) }}
  </div>
{% else %}
  <div class="static-content-sdc-error" style="padding: 20px; border: 1px solid red; background: #ffe6e6;">
    <strong>Error:</strong> No 'id' provided to Static Content component.<br>
    Usage: <code>{{ include('static_content_type:static_content', { id: 'your-content-id' }) }}</code>
  </div>
{% endif %}
